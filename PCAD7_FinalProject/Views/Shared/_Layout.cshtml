<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PCAD7_Project_MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link href="custom.css" rel="stylesheet" />
</head>

<body>
    
    <header class="header">
        <div class="container">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid" ,"container text-center">
                <a class="navbar-brand" style="color: red"  font-weight="20px" font-size="70px" asp-area="" asp-controller="Home" asp-action="Index">project</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation" >
                    <span class="navbar-toggler-icon"></span>
                </button>
                <br />
                <div id="wrapper">
                    <ul class="nav">
                        <li class="right">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                     @*   <li class="right">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>*@
                        <li class="right">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Product</a>
                        </li>
                     @*   <li class="right">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>*@
                        <li class="right">
                            <a class="nav-link text-dark" href="https://www.roninfoundation.net/"> Ronin Foundation</a>
                        </li>
                        <li>
                        @if(User.Identity.IsAuthenticated)
                        {
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="LogOut">Log out</a>
                        }
                        else
                        {
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                        }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        </div>
    </header>
    <div
    class="masthead"
    style="background-image: url('https://inspgr.id/app/uploads/2019/11/illustration-paiheme-11-805x984.jpg'); height: 90vh;">
        <div class="color-overlay d-flex justify-content-center align-items-center text-decoration-color:white ">
            @*<div class="text-center">
                <h1 class="display-4" >Welcome to the test site!</h1>
                @if(User.Identity.IsAuthenticated)
                {
                   <h4>Welcome @User.Identity.Name </h4>
                }
            </div> *@
        </div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody() @*replace the actual content from the view*@
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - PCAD7_Project_MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
